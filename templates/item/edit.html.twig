{% extends 'base.html.twig' %}

{% block title %}Edit Item{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="d-flex justify-content-between bg-white border-bottom border-1 p-3">
        <h5 class="align-self-center mb-0">Edit Item</h5>
        <div class="d-flex justify-content-between gap-2">
            {% set vars = {
                'action' : path('app_item_delete', {'uuid': item.uuid}),
                'token_id' : item.uuid
            } %}
            {% include '_includes/_delete_form.html.twig' with vars  %}
            <a class="btn btn-sm btn-secondary" href="{{ path('app_item_index') }}">Back To List</a>
        </div>
    </div>
    <!-- Page Content -->
    <div class="p-3">
        {{ include('item/_form.html.twig') }}
    </div>
{% endblock %}
