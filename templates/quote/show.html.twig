{% extends 'base.html.twig' %}

{% block title %}{{ item.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 border-right">
            <!-- Page Header -->
            <div class="d-flex justify-content-between bg-white border-bottom border-1 p-3">
                <h5 class="align-self-center mb-0">Quotes</h5>
                <div>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_quote_new') }}">New</a>
                    <a class="btn btn-sm btn-secondary" href="#" id="listDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-ellipsis-v"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right animated--fade-in shadow" aria-labelledby="listDropdown">
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                            Profile
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                            Settings
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                            Activity Log
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
            <!-- Page Content -->
            <div class="p-3">
                <table class="table">
                    <tbody>
                    {% for quote in quotes %}
                        <tr>
                            <td class="text-nowrap"><a href="{{ path('app_item_show', {'uuid': quote.uuid}) }}">{{ quote.name }}</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">No Records Found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-8">
            <!-- Page Header -->
            <div class="d-flex justify-content-between bg-white border-bottom border-1 p-3">
                <h5 class="align-self-center mb-0">{{ item.name }}</h5>
                <div>
                    <a class="btn btn-sm btn-secondary px-3" href="{{ path('app_item_edit', {'uuid': item.uuid}) }}">Edit</a>
                    <a class="btn btn-sm btn-secondary" href="#" id="actionsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right animated--fade-in shadow" aria-labelledby="listDropdown">
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                            Profile
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                            Settings
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                            Activity Log
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                            Logout
                        </a>
                    </div>
                    <a class="btn btn-sm px-3" href="{{ path('app_service_index') }}">
                        Back To List
                    </a>
                </div>
            </div>
            <!-- Page Content -->
            <div class="p-3">
                <h5>Overview</h5>
                <hr class="sidebar-divider">
                <div class="row mb-2">
                    <div class="col-md-2 font-weight-bold">Description</div>
                    <div class="col-md-10">{{ item.description }}</div>
                </div>
                <div class="mb-2">
                    <div class="d-flex justify-content-between border-bottom pb-2 my-3">
                        <h5 class="mb-0 align-self-center">Other</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
