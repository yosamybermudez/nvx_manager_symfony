<turbo-stream action="replace" target="turboModalContent">
    <template>
        <div class="modal-content" id="turboModalContent">
            <div class="modal-header">
                <h5 class="modal-title" id="newPaymentModalLabel">Payment Success</h5>
            </div>
            <div class="modal-body">
                {{ payment.amount }}
            </div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-primary btn-sm" type="button" data-dismiss="modal">OK</button>
            </div>
        </div>
    </template>
</turbo-stream>

<turbo-stream action="replace" target="invoice-status-{{ invoice.uuid }}">
    <template>
        <td id="invoice-status-{{ invoice.uuid }}">
            <span class="badge text-uppercase badge-{% if invoice.invoiceStatus == 'Paid' %}success{% else %}danger{% endif %}">{{ invoice.invoiceStatus }}</span>
        </td>
    </template>
</turbo-stream>

<turbo-stream action="replace" target="invoice-pending-{{ invoice.uuid }}">
    <template>
        <td id="invoice-pending-{{ invoice.uuid }}">
            {{ invoice.pendingAmount | number_format(2,'.') }}
        </td>
    </template>
</turbo-stream>