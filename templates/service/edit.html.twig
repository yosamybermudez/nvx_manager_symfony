{% extends 'base.html.twig' %}

{% block title %}Edit Service{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="d-flex justify-content-between bg-white border-bottom border-1 p-3">
        <h5 class="align-self-center mb-0">Edit Service</h5>
        <div class="d-flex justify-content-between">
            {% set vars = {
                'action' : path('app_service_delete', {'uuid': service.uuid}),
                'token_id' : service.uuid
            } %}
            {% include '_includes/_delete_form.html.twig' with vars  %}
            <a class="btn btn-sm btn-secondary" href="{{ path('app_service_index') }}">Back To List</a>
        </div>
    </div>
    <!-- Page Content -->
    <div class="p-3">
        {{ include('service/_form.html.twig') }}
    </div>
{% endblock %}

{% block bottom_scripts %}

{% endblock %}

